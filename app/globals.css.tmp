/* --- Fintech Modern Slide Styles --- */
.fintech-slide {
    width: 100%;
    height: 400px;
    background: linear-gradient(145deg, #0f172a 0%, #161e31 50%, #0f172a 100%);
    border-radius: 32px;
    overflow: hidden;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 60px;
    color: #ffffff;
    box-shadow: 0 20px 40px -15px rgba(0, 0, 0, 0.4);
    border: 1px solid rgba(255, 255, 255, 0.08);
}

.fintech-slide-glow {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    overflow: hidden;
    z-index: 1;
}

.glow-1 {
    position: absolute;
    top: -5%;
    left: -2%;
    width: 35%;
    height: 40%;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.1) 0%, transparent 70%);
    filter: blur(50px);
}

.glow-2 {
    position: absolute;
    bottom: -5%;
    right: -2%;
    width: 35%;
    height: 40%;
    background: radial-gradient(circle, rgba(16, 185, 129, 0.06) 0%, transparent 70%);
    filter: blur(50px);
}

.fintech-slide-left {
    flex: 0 0 35%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    z-index: 10;
    min-width: 0;
    padding-right: 20px;
}

.headline-block {
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(10px);
    padding: 15px 25px;
    border-radius: 18px;
    border: 1px solid rgba(255, 255, 255, 0.05);
    display: inline-flex;
    align-items: center;
    width: fit-content;
}

.fintech-slide-title {
    font-size: clamp(28px, 4vw, 42px);
    font-weight: 900;
    line-height: 1.1;
    letter-spacing: -0.02em;
    text-transform: uppercase;
    margin: 0;
    color: #ffffff;
}

.fintech-slide-right {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    z-index: 10;
    height: 100%;
    position: relative;
    width: 100%;
}

.bank-dist {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    width: 100%;
    gap: 20px;
    padding-right: 20px;
}

.bank-grid-3 {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 15px;
    width: 100%;
    max-width: 600px;
    margin-left: auto;
}

.bank-tile-unit {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 12px;
    border-radius: 12px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.08);
    transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    text-decoration: none;
    position: relative;
    overflow: hidden;
    height: 85px;
    width: 100%;
}

.bank-tile-unit:hover {
    transform: scale(1.05);
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.2);
}

.bank-tile-name-text {
    font-size: 11px;
    font-weight: 800;
    color: rgba(255, 255, 255, 0.9);
    text-align: center;
    line-height: 1.2;
}

.more-tile {
    cursor: pointer;
    background: rgba(255, 255, 255, 0.1);
    border: 1px dashed rgba(255, 255, 255, 0.4);
}

.more-tile span {
    font-weight: 800;
    font-size: 13px;
    color: #ffffff;
    text-transform: uppercase;
}

.custom-scrollbar::-webkit-scrollbar {
    width: 4px;
}
.custom-scrollbar::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
}
.custom-scrollbar::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 10px;
}

@media (max-width: 768px) {
    .fintech-slide {
        flex-direction: column;
        height: auto;
        min-height: 500px;
        padding: 40px 20px;
        justify-content: center;
    }
    .fintech-slide-left {
        flex: none;
        width: 100%;
        padding-right: 0;
        margin-bottom: 30px;
        align-items: center;
    }
    .bank-grid-3 {
        grid-template-columns: repeat(2, 1fr);
    }
    .bank-dist {
        flex-wrap: wrap;
        justify-content: center;
    }
}
